<Window x:Class="Lab5.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="LoginTbx" Grid.Row="0" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Логин"/>
        <PasswordBox x:Name="PasswordTbx" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Пароль" Margin="0,78,0,0" Grid.RowSpan="2"/>
        <Button Grid.Row="2" Content="Авторизоваться" Click="Button_Click"/>
    </Grid>
</Window>